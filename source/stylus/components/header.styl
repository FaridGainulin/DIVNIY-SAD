.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    color: $color-brown
    padding 10px 0
    +above($breakpoints.sm)
      padding 5px 0
    +above($breakpoints.md)
      padding 8px 0 12px
    +above($breakpoints.xxl)
      padding 10px 0 16px

  &__brand
    display: none
    +above($breakpoints.sm)
      flex-basis: 40%
      display: flex
      flex-direction: column
      gap: 5px

  &__logo
    width 54px
    height: auto
    +above($breakpoints.sm)
      width 80px
    +above($breakpoints.md)
      width 90px
    +above($breakpoints.xxl)
      width 106px

  &__connection
    display: flex
    align-items: center
    justify-content flex-end
    gap: 6px
    +above($breakpoints.sm)
      flex-basis: 40%
      gap: 8px;
    +above($breakpoints.md)
      gap: 9px;
    +above($breakpoints.xxl)
      gap: 10px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.md)
      width 13px
      height: 13px
    +above($breakpoints.xxl)
      width 14px
      height: 14px

