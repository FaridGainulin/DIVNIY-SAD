.steps-section
  &__out-wrapper
    background-image: url('../images/steps-section-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    background-color #019A46

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 100px 0

  &__img-doc
    position: absolute
    z-index -1
    width: 325px;
    height: auto;
    bottom: 25px;
    left: -126px;
    +above($breakpoints.sm)
      width: 268px;
      bottom: -30px;
      left: -37px;
    +above($breakpoints.md)
      width: 370px;
      bottom: -40px;
      left: -37px;
    +above($breakpoints.xxl)
      width 500px
      bottom: -55px
      left: -80px

  &__title
    position relative
    z-index 1
    padding 0 0 15px 0
    text-align: center
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 60px 0
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-orange
      border-radius: 40px
      width: 133px;
      height: 22px;
      top: -2px;
      left: 117px;
      +above($breakpoints.sm)
        width: 202px;
        height: 32px;
        top: -3px;
        left: 307px;
      +above($breakpoints.md)
        width: 330px;
        height: 51px;
        top: -1px;
        left: 390px;
      +above($breakpoints.xxl)
        width: 413px;
        height: 66px;
        top: -3px;
        left: 474px;

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px 0
      width 550px
    +above($breakpoints.md)
      width 800px
      gap: 15px 0
    +above($breakpoints.xxl)
      gap: 20px 0

  &__card
    width 280px !important
    display: flex
    align-items: center
    justify-content center
    gap: 7px
    +above($breakpoints.sm)
      justify-content start
      width: 235px !important;
      gap: 15px;
    +above($breakpoints.md)
      width: 320px !important;
      gap: 18px;
    +above($breakpoints.xxl)
      width 400px !important
      gap: 20px

  &__card-num
    background-color $color-orange
    color: $color-white
    border-radius: 50%
    display: flex
    justify-content center
    align-items: center
    width: 62px;
    height: 62px;
    font-size: 30px;
    line-height: 120%;
    +above($breakpoints.sm)
      font-size: 26px
      width 53px
      height: 53px
    +above($breakpoints.md)
      font-size: 37px;
      width: 70px;
      height: 70px;
    +above($breakpoints.xxl)
      font-size: 46px
      width 80px
      height: 80px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      margin-top 30px
      margin-left 220px
      align-items: flex-start
      gap: 15px
    +above($breakpoints.md)
      margin-top 40px
      margin-left 315px
      gap: 18px;
    +above($breakpoints.xxl)
      margin-top 62px
      margin-left 400px
      gap: 20px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 260px !important
    +above($breakpoints.md)
      width 300px !important
    +above($breakpoints.xxl)
      width 340px !important

  &__img
    width: 190px;
    height: auto;
    margin: 0px 0 0 149px;
    +above($breakpoints.sm)
      margin: 0;
      position: absolute;
      z-index: -1;
      width: 365px;
      bottom: 0;
      right: -52px;
    +above($breakpoints.md)
      width: 472px;
      right: -57px;
    +above($breakpoints.xxl)
      width 609px
      right: -130px

.steps-card-order-2
  +above($breakpoints.sm)
    order: 2
.steps-card-order-3
  +above($breakpoints.sm)
    order: 3
.steps-card-order-4
  +above($breakpoints.sm)
    order: 4
.steps-card-order-5
  +above($breakpoints.sm)
    order: 5
.steps-card-order-6
  +above($breakpoints.sm)
    order: 6
.steps-card-order-7
  +above($breakpoints.sm)
    order: 7
.steps-card-order-8
  +above($breakpoints.sm)
    order: 8
.steps-card-order-9
  +above($breakpoints.sm)
    order: 9
.steps-card-order-10
  +above($breakpoints.sm)
    order: 10
